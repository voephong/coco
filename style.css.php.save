tr:hover {
  background-color: #ddd;
}

/* Style table cells */
td {
  padding: 8px;
}

/* Style form input fields */
input[type="text"],
input[type="password"],

select {
  width: 100%;
  padding: 10px;
  margin: 5px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

/* Style form submit button */
input[type="submit"] {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

/* Change submit button color on hover */
input[type="submit"]:hover {
  background-color: #45a049;
}
